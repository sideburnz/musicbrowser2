<Mcml xmlns="http://schemas.microsoft.com/2008/mcml"
      xmlns:cor="assembly://MSCorLib/System"
      xmlns:entities="assembly://MusicBrowser/MusicBrowser.Entities"
      xmlns:a="assembly://MusicBrowser/MusicBrowser"
      xmlns:models="assembly://MusicBrowser/MusicBrowser.Models"
      xmlns:addin="assembly://Microsoft.MediaCenter/Microsoft.MediaCenter.Hosting"
      xmlns:actions="assembly://MusicBrowser/MusicBrowser.Actions"
      xmlns:me="Me"
      >

  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/ctrlHeader"/>
  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/ctrlFooter"/>

  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/ctrlActionPopUp"/>
  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/ctrlPlayListAction"/>

  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/viewList"/>
  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/viewThumb"/>
  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/viewStrip"/>
  <Aggregate Source="resx://MusicBrowser/MusicBrowser.Resources/viewThumbsDown"/>

  <UI Name="pageMain">

    <Properties>
      <a:Application Name="Application" Application="$Required"/>
      <models:FolderModel Name="FolderModel" FolderModel="$Required" />
      <models:UINotifier Name="UINotifier" UINotifier="$Required" />
      <models:ActionsModel Name="ActionsModel" ActionsModel="$Required" />

      <actions:ActionRefreshMetadata Name="RefreshAction" />
      <actions:ActionShowSearch Name="SearchAction" />
    </Properties>

    <Locals>
      <addin:AddInHost Name="AddInHost"/>
      <models:Clock Name="Clock"/>
      
      <ShortcutHandler Name="hNext" Shortcut="SkipForward" HandlerStage="Bubbled"/>
      <ShortcutHandler Name="hPrev" Shortcut="SkipBack" HandlerStage="Bubbled"/>
      <ShortcutHandler Name="hStop" Shortcut="Stop" HandlerStage="Bubbled"/>
      <ShortcutHandler Name="hPlayPause" Shortcut="PlayPause" HandlerStage="Bubbled" />
      <ShortcutHandler Name="hPause" Shortcut="Pause" HandlerStage="Bubbled" />
      <ShortcutHandler Name="hRec" Shortcut="Record" HandlerStage="Bubbled" Command="[RefreshAction]" />

      <Timer Name="BackgroundTimer" AutoRepeat="True" Interval="10000" Enabled="True" />

      <EditableText Name="editableText" />
      <TypingHandler Name="typingHandler" HandlerStage="Bubbled" TypingPolicy="TripleTap" />
    </Locals>

    <Rules>

      <Binding Source="[FolderModel.ParentEntity]" Target="[RefreshAction.Entity]" />
      <Binding Source="[FolderModel.ParentEntity]" Target="[SearchAction.Entity]" />

      <Binding Source="[editableText]" Target="[typingHandler.EditableText]" />
      <Changed Source="[editableText.Value]">
        <Conditions>
          <Equality Source="[editableText.Value]" ConditionOp="NotEquals" Value="" />
        </Conditions>
        <Actions>
          <Set Target="[SearchAction.SearchString]" Value="[editableText.Value]" />
          <Invoke Target="[SearchAction.Invoke]" />
          <Set Target="[editableText.Value]" Value="" />
        </Actions>
      </Changed>

      <Changed Source="[BackgroundTimer.Tick]">
        <Actions>
          <Invoke Target="[FolderModel.ParentEntity.GetNextBackground]"/>
        </Actions>
      </Changed>
      
      <!--<Changed Source="[hNext.Invoked]">
        <Actions>
          <Invoke Target="[FolderModel.TransportCommand]" command="next" />
        </Actions>
      </Changed>
      <Changed Source="[hPrev.Invoked]">
        <Actions>
          <Invoke Target="[FolderModel.TransportCommand]" command="prev" />
        </Actions>
      </Changed>
      <Changed Source="[hStop.Invoked]">
        <Actions>
          <Invoke Target="[FolderModel.TransportCommand]" command="stop" />
        </Actions>
      </Changed>
      <Changed Source="[hPlayPause.Invoked]">
        <Actions>
          <Invoke Target="[FolderModel.TransportCommand]" command="playpause" />
        </Actions>
      </Changed>
      <Changed Source="[hPause.Invoked]">
        <Actions>
          <Invoke Target="[FolderModel.TransportCommand]" command="playpause" />
        </Actions>
      </Changed>-->

      <Binding Source="[Clock.Time]" Target="[TimeDate.Content]" />
      <Binding Source="[FolderModel.ShowClock]" Target="[TimeDate.Visible]" />
      
      <!-- these rules are all executed unconditionally -->
      <Rule>
        <Actions>
          <Set Target="[AddInHost.MediaCenterEnvironment.BackgroundMode]" Value="AudioAnimated"/>
          <Invoke Target="[ViewPanel.NavigateInto]" />
        </Actions>
      </Rule>

      <Binding Source="[FolderModel.Matches]" Target="[List_Matches.Content]" />
      <Binding Source="[FolderModel.SelectedIndex!cor:String]" Target="[List_Counter.Content]">
        <Transformer>
          <MathTransformer Add="1" />
        </Transformer>
      </Binding>
     
      <Binding Source="[FolderModel.ParentEntity.Background]" Target="[EntityBackground.Content]"/>
      <Binding Source="[FolderModel.Busy]" Target="[imageSpinner.Visible]" />

      <Changed Source="[ActionsModel.Visible]">
        <Conditions>
          <Equality Source="[ActionsModel.Visible]" Value="false" />
        </Conditions>
        <Actions>
          <Set Target="[pageFader.Visible]" Value="false" />
          <Invoke Target="[ViewPanel.NavigateInto]" />
        </Actions>
      </Changed>

      <Changed Source="[ActionsModel.Visible]">
        <Conditions>
          <Equality Source="[ActionsModel.Visible]" Value="true" />
        </Conditions>
        <Actions>
          <Set Target="[pageFader.Visible]" Value="true" />
          <Invoke Target="[ActionPopUp.NavigateInto]" />
        </Actions>
      </Changed>

      <Binding Source="[ActionsModel.Visible]" Target="[ActionPopUp.Visible]" />

      <!--<Set Target="[AddInHost.MediaCenterEnvironment.BackgroundMode]" Value="AlbumArtMosaic"/>-->
      
    </Rules>
    
    <Content>
      <ColorFill Content="Transparent" Layout="Form">
        <Children>

          <!-- POP UPS -->
          <me:ctrlPlayListAction Visible="true" UINotifier="[UINotifier]" />
          <me:ctrlActionPopup Name="ActionPopUp" Visible="true" Model="[ActionsModel]" Entity="[FolderModel.ParentEntity]" />
          
          <!-- FADER -->
          <Panel Visible="true">
            <LayoutInput>
              <FormLayoutInput Left="Parent,0" Top="Parent,.0" Right="Parent,1" Bottom="Parent,1"/>
            </LayoutInput>
            <Children>
              <ColorFill Name="pageFader" Visible="false" Content="Black" Alpha="0.8"/>
            </Children>
          </Panel>

          <!-- VIEWS -->
          <Panel Name="ViewPanel">
            <LayoutInput>
              <FormLayoutInput Left="Parent,.0" Top="Parent,.17" Bottom="Parent,0.76"  Right="Parent,1"/>
            </LayoutInput>
            <Children>
              <me:viewList Visible="true" FolderModel="[FolderModel]" Application="[Application]" />
              <me:viewThumb Visible="true" FolderModel="[FolderModel]" Application="[Application]" />
              <me:viewStrip Visible="true" FolderModel="[FolderModel]" Application="[Application]" />
              <me:viewThumbsDown Visible="true" FolderModel="[FolderModel]" Application="[Application]" />
            </Children>
          </Panel>

          <!-- Page Header -->
          <me:ctrlHeader Name="ctrlHeader" Visible="true" Entity="[FolderModel.ParentEntity]" Application="[Application]" ActionsModel="[ActionsModel]">
            <LayoutInput>
              <FormLayoutInput Left="Parent,.0" Top="Parent,.0" Bottom="Parent,.15" Right="Parent,1"/>
            </LayoutInput>
          </me:ctrlHeader>

          <!-- POSITION INDICATOR -->
          <Panel>
            <LayoutInput>
              <FormLayoutInput Right="Parent,.985" Bottom="Parent,.99" Horizontal="Far"/>
            </LayoutInput>
            <Layout>
              <FlowLayout Orientation="Vertical" ItemAlignment="Far"/>
            </Layout>
            <Children>
              <Graphic Name="imageSpinner" Content="resx://MusicBrowser/MusicBrowser.Resources/imageSpinner" MinimumSize="30,30" MaximumSize="30,30" Visible="false">
                <Animations>
                  <Animation Name="RotateRound" CenterPointPercent="0.5,0.5,0.5" Loop="-1">
                    <Keyframes>
                      <RotateKeyframe Time="0.0" Value="0deg;0,0,0" Interpolation="Linear" RelativeTo="Current" />
                      <RotateKeyframe Time="1.0" Value="360deg;0,0,0" RelativeTo="Current" />
                    </Keyframes>
                  </Animation>
                </Animations>
              </Graphic>
              <Panel>
                <LayoutInput>
                  <FormLayoutInput Right="Parent,0.89" Top="Parent,0.6"/>
                </LayoutInput>
                <Children>
                  <Text Name="TimeDate" Content="" Color="White" Font="Segoe Media Center Light, 24" HorizontalAlignment="Far" Alpha="0.7" Margins="0,0,5,0"/>
                </Children>
              </Panel>
              <Panel Layout="HorizontalFlow" Margins="0,0,0,0">
                <Children>
                  <Text Name="List_Counter" Content="0" Color="White" Font="Segoe Media Center, 20, Bold" HorizontalAlignment="Far" />
                  <Text Name="List_Break" Content="|" Color="Gray" Font="Segoe Media Center, 20, Bold" HorizontalAlignment="Far" />
                  <Text Name="List_Matches" Content="[FolderModel.Matches]" Color="Gray" Font="Segoe Media Center, 20" HorizontalAlignment="Far" Margins="0,0,5,0" />
                </Children>
              </Panel>
              <Text Content="[FolderModel.Version]" Font="Segoe Media Center Light, 16" Color="White" Alpha="0.6" />
            </Children>
          </Panel>

          <!-- Now Playing Pod -->
          <Panel>
            <LayoutInput>
              <AnchorLayoutInput Bottom="Parent,1" Left="Parent,0"/>
            </LayoutInput>
            <Children>
              <NowPlaying Name="NowPlayingPod" ShowFullMetadata="Never" />
            </Children>
          </Panel>

          <!-- FOOTER -->
          <Panel Layout="Form">
            <LayoutInput>
              <FormLayoutInput Top="Parent,0.79" Left="Parent,0" Bottom="Parent,1" Right="Parent,1"/>
            </LayoutInput>
            <Children>
              <me:ctrlFooter Name="Footer" FolderModel="[FolderModel]">
                  <LayoutInput>
                    <FormLayoutInput Top="Parent,0.05" Left="Parent,0.165"/>
                  </LayoutInput>
              </me:ctrlFooter>
              <ColorFill Content="Black" Alpha="0.33" Layout="Fill" />
            </Children>
          </Panel>

            <!-- Background -->
          <Graphic Name="BGOverlay" Content="resx://MusicBrowser/MusicBrowser.Resources/defaultBackground" Alpha="1" MaintainAspectRatio="false" Layout="Fill" Margins="0,0,0,0" />
          <Panel Visible="true">
            <LayoutInput>
              <FormLayoutInput Left="Parent,0" Top="Parent,.0" Right="Parent,1" Bottom="Parent,1"/>
            </LayoutInput>
            <Children>
              <ColorFill Visible="true" Content="Black" Alpha="0.3"/>
            </Children>
          </Panel>
          <Graphic Name="EntityBackground" Content="[FolderModel.ParentEntity.Background]" Alpha="1" MaintainAspectRatio="false" Layout="Fill" Margins="0,0,0,0" Visible="true">
            <Animations>
              <Animation Type="ContentChangeHide">
                <Keyframes>
                  <AlphaKeyframe Time="0.0" Value="1" />
                  <AlphaKeyframe Time="3" Value="0" Interpolation="SCurve" />
                </Keyframes>
              </Animation>
              <Animation Type="ContentChangeShow">
                <Keyframes>
                  <AlphaKeyframe Time="0.0" Value="0" />
                  <AlphaKeyframe Time="3" Value="1" Interpolation="SCurve" />
                </Keyframes>
              </Animation>
            </Animations>
          </Graphic>
        </Children>
      </ColorFill>
      
    </Content>

  </UI>
  
</Mcml>